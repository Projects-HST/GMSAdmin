<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/total_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/grievance_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shadow_round"
        android:elevation="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:weightSum="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="0.3">

                <TextView
                    android:id="@+id/petition_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_petition"
                    android:drawablePadding="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_bold" />

                <TextView
                    android:id="@+id/enquiry_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_enquiry"
                    android:drawablePadding="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_bold"
                    android:visibility="gone"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/seeker_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_marginStart="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text=""
                android:visibility="gone"
                android:layout_marginEnd="-20dp"
                android:textColor="@color/text_grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/grievance_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:text="completed"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/line_grey"/>

        <TextView
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_profile"
            android:drawablePadding="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_bold" />

        <TextView
            android:id="@+id/grievance_name"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/grievance_sub_category"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_regular"
            android:text=""
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_grey"
            android:textSize="14sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/grievance_date"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_date_active"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:text="completed"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>